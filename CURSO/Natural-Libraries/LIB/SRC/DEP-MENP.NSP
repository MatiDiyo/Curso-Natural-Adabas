*
SET KEY ALL
INPUT USING MAP 'DEP-MENM' /* DEP-MENM
*
IF *PF-KEY EQ 'ENTR'
  DECIDE ON FIRST VALUE OF #OPCION
    VALUE 1
      FETCH 'DEP-ALTP' /* ALTA DEPARTAMENTO
    VALUE 2
      FETCH 'DEP-MENP' /* BAJA DEPARTAMENTO
    VALUE 3
      FETCH 'EMP-MODP' /* MODIFICACIÓN DEPARTAMENTO
    VALUE 4
      FETCH 'EMP-CONP' /* CONSULTA DEPARTAMENTO
    NONE VALUE      
      REINPUT 'OPCIÓN INCORRECTA'
  END-DECIDE
END-IF
